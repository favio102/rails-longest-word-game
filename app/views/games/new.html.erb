
  <div class="text-center">
    <h1 class="content-center">Welcome to the largest Word-Game</h1>
    <h2>New Game</h2>
    <br>
    <br>

        <ul class="letters">
          <% @letters.each do |letter| %>
          <li class="list-group-item"> <%= letter %> </li>
          <% end %>
        </ul>

    <form action="/score" method="POST" data-turbo="false">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :letters, @letters %>
      <br>
      <br>
      <label for="word">What is the longest word you can find?...</label>
      <br>
      <br>
      <div class="input-group">
        <input type="text" name="word" placeholder="insert a word..." class="form-control" >
        <input type="submit" value="play" class="btn btn-dark">
      </div>
    </form>
  </div>
